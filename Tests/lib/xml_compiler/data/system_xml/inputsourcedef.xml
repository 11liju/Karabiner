<?xml version="1.0"?>
<root>
  {{ INPUTSOURCEDEF_REPLACEMENT }}

  <!-- ============================================================ -->
  <!-- For VK_CHANGE_INPUTSOURCE_* -->
  <vkchangeinputsourcedef>
    <name>KeyCode::VK_CHANGE_INPUTSOURCE_JAPANESE</name>
    <languagecode>ja</languagecode>
  </vkchangeinputsourcedef>

  <vkchangeinputsourcedef>
    <name>KeyCode::VK_CHANGE_INPUTSOURCE_DVORAK</name>
    <inputsourceid_equal>com.apple.keylayout.Dvorak</inputsourceid_equal>
  </vkchangeinputsourcedef>

  <vkchangeinputsourcedef>
    <name>KeyCode::VK_CHANGE_INPUTSOURCE_SWISS</name>
    <inputsourceid_prefix>com.apple.keylayout.Swiss</inputsourceid_prefix>
  </vkchangeinputsourcedef>

  <!-- ============================================================ -->
  <!-- kTISPropertyInputSourceID -->

  <inputsourcedef>
    <name>CANADIAN</name>
    <inputsourceid_prefix>com.apple.keylayout.Canadian</inputsourceid_prefix>
  </inputsourcedef>

  <inputsourcedef>
    <name>BEPO</name>
    <inputsourceid_equal>com.apple.keyboardlayout.fr-dvorak-bepo.keylayout.FrenchDvorak</inputsourceid_equal>
  </inputsourcedef>

  <inputsourcedef>
    <name>BEPO</name>
    <detail>BEPO_AZERTYCMD</detail>
    <inputsourceid_equal>com.apple.keyboardlayout.fr-dvorak-bepo.keylayout.FrenchDvorak-AzertyCmd</inputsourceid_equal>
  </inputsourcedef>

  <!-- ============================================================ -->
  <!-- kTISPropertyInputModeID -->

  <!-- Japanese -->
  <inputsourcedef>
    <name>JAPANESE</name>
    <detail>JAPANESE_HIRAGANA</detail>
    <inputmodeid_equal>com.apple.inputmethod.Japanese.Hiragana</inputmodeid_equal>
  </inputsourcedef>

  <inputsourcedef>
    <name>JAPANESE</name>
    <detail>JAPANESE_KATAKANA</detail>
    <inputmodeid_equal>com.apple.inputmethod.Japanese.Katakana</inputmodeid_equal>
  </inputsourcedef>

  <inputsourcedef>
    <name>JAPANESE</name>
    <detail>JAPANESE_FULLWIDTH_ROMAN</detail>
    <inputmodeid_equal>com.apple.inputmethod.Japanese.FullWidthRoman</inputmodeid_equal>
  </inputsourcedef>

  <inputsourcedef>
    <name>JAPANESE</name>
    <detail>JAPANESE_HALFWIDTH_KANA</detail>
    <inputmodeid_equal>com.apple.inputmethod.Japanese.HalfWidthKana</inputmodeid_equal>
  </inputsourcedef>

  <inputsourcedef>
    <name>JAPANESE</name>
    <inputmodeid_equal>com.apple.inputmethod.Japanese</inputmodeid_equal>
  </inputsourcedef>

  <!-- ============================================================ -->
  <!-- BCP 47 -->
  <inputsourcedef>
    <name>FRENCH</name>
    <languagecode>fr</languagecode>
  </inputsourcedef>

</root>
