<?xml version="1.0"?>
<root>

  <item>
    <name>Expose Mode 2</name>
    <appendix><![CDATA[  Mission Control: K down -> E down -> E up  ]]></appendix>
    <appendix><![CDATA[  Show Desktop: K down -> D down -> D up  ]]></appendix>
    <appendix><![CDATA[  Launchpad: K down -> L down -> L up  ]]></appendix>
    <identifier>remap.expose_mode2</identifier>

    <autogen>
      __BlockUntilKeyUp__ KeyCode::K, ModifierFlag::NONE,
    </autogen>
    <autogen>
      __KeyOverlaidModifier__
      KeyCode::K, ModifierFlag::NONE,
      KeyCode::VK_MODIFIER_EXPOSE_MODE_2,
      KeyCode::K,
    </autogen>

    <autogen>
      __KeyToKey__
      KeyCode::E, ModifierFlag::EXPOSE_MODE_2,
      KeyCode::MISSION_CONTROL,
      Option::NOREPEAT,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::D, ModifierFlag::EXPOSE_MODE_2,
      KeyCode::MISSION_CONTROL, ModifierFlag::COMMAND_L,
      Option::NOREPEAT,
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::L, ModifierFlag::EXPOSE_MODE_2,
      KeyCode::LAUNCHPAD,
      Option::NOREPEAT,
    </autogen>
  </item>

</root>
